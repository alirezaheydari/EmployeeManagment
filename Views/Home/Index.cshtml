@model IEnumerable<Employee>

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Employee Details";
}

<div class="card-deck">
    @foreach (var employee in Model)
    {
        var PhotoPath = $"~/images/{employee.PhotoPath ?? "ghazal.jpg"}";
        <div class="card m-3" style="min-width: 18rem; max-width: 30.5%">
            <div class="card-header">
                <h3>@employee.Name</h3>
            </div>
            <img class="card-img-top imageThumbnail" src="@PhotoPath" asp-append-version="true" />
            <div class="card-footer text-center">
                <form method="post" asp-action="DeleteEmployee" asp-route-id="@employee.Id">
                    <a asp-action="Details" asp-controller="home" asp-route-id="@employee.Id" class="btn btn-primary m-1">View</a>
                    <a asp-action="edit" asp-controller="home" asp-route-id="@employee.Id" class="btn btn-primary m-1">Edit</a>
                    <span style="display: none" id="confirmDeleteSpan_@(@employee.Id)">
                        <span>Are you sure want to delete ?</span>
                        <button type="submit" class="btn btn-danger">Yes</button>
                        <a href="#" onclick="confirmDelete('@(@employee.Id)',false)" class="btn btn-primary">No</a>
                    </span>
                    <span id="deleteSpan_@(@employee.Id)">
                        <a href="#" onclick="confirmDelete('@(@employee.Id)',true)" class="btn btn-danger">
                            Delete
                        </a>
                    </span>
                </form>
            </div>
        </div>

    }

</div>


@section Scripts{
    <script src="~/js/CustomScript.js"></script>
}