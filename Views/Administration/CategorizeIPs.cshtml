@model List<CategorizeIPsModelView>
@inject IIpDetectedRepository ipDetected


@{
    ViewBag.Title = "CategorizeIPs";
}
<h1 class="m-5 text-center">CategorizeIPs</h1>
<div class="text-center m-5">
    <form method="post" asp-action="DeleteAllIPs">
        <button style="width: auto" type="submit" class="btn btn-danger">Purge</button>
    </form>
</div>
<div class="text-center m-5">
</div>


<table class="table table-dark" >
    <tr class="d-xl-table-row" >
        <th>IP</th>
        <th>Pattern</th>
        <th>Count</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr class="d-xl-table-row">
            <td>@item.IP</td>
            <td>@item.Pattern</td>
            <td>@item.Count</td>
        </tr>
    }
</table>


<div style="display: flex; flex-flow: wrap-reverse">
        
</div>