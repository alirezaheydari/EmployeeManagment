@model List<IpDetectedModelView>
@inject IIpDetectedRepository ipDetected


@{
    ViewBag.Title = "IPs List";
}
<h1 class="m-5 text-center">IPs List</h1>
<div class="text-center m-5">
    <form method="post" asp-action="DeleteAllIPs">
        <button style="width: auto" type="submit" class="btn btn-danger">Purge</button>
    </form>
</div>
<div class="text-center m-5">
    <form method="post" asp-action="IpsListWithOutPattern">
        <div class="form-group row">
            <label class="col-sm-2 col-form-label"> Title </label>
            <div class="col-sm-10">
                <input name="Title" class="form-control" placeholder="Title" type="text" />
            </div>
        </div>
        <div class="form-group row">
            <label class="col-sm-2 col-form-label">IP Contains</label>
            <div class="col-sm-10">
                <input name="ipContains" class="form-control" placeholder="IP Contains" type="text" />
            </div>
        </div>
        <div class="form-group row">
            <div class="col-sm-10">
                <button type="submit" class="btn btn-primary">Search</button>
            </div>
        </div>
    </form>
</div>
<div class="text-center m-5">
    @if (ViewBag.JustPattern)
    {
        <a asp-action="IpsListWithOutPattern" class="btn btn-dark" style="width: auto"> Show all </a>
    }
    else
    {
        <a asp-action="IpsList" class="btn btn-dark" style="width: auto"> match with pattern </a>
    }
</div>

<div style="display: flex; flex-flow: wrap-reverse">
    @if (ViewBag.JustPattern)
    {
        @foreach (var item in Model.Where(x => x.Pattern > 0))
        {
            <div class="card mt-2 col-3" style="min-width: 18rem; max-width: 30.5%">
                <div class="card-header">
                    <div class="card-title"> @item.Ip </div>
                </div>
                <div class="card-body">
                    <div class="card-title"> IP :  @item.Ip </div>
                    <div class="card-title"> Pattern :  @item.PatternName </div>
                    <div class="card-title"> Time For Request :  @item.requestTime </div>
                </div>
                <div class="card-footer">
                    <form method="post" asp-action="DeleteThisIp" asp-route-id="@item.Id">
                        <button type="submit" class="btn btn-danger">Delete</button>
                    </form>
                </div>
            </div>
        }
    }
    else
    {
        @foreach (var item in Model)
        {
            <div class="card mt-2 col-3" style="min-width: 18rem; max-width: 30.5%">
                <div class="card-header">
                    <div class="card-title"> @item.Ip </div>
                </div>
                <div class="card-body">
                    <div class="card-title"> IP :  @item.Ip </div>
                    <div class="card-title"> Pattern :  @item.PatternName </div>
                    <div class="card-title"> Time For Request :  @item.requestTime </div>
                </div>
                <div class="card-footer">
                    <form method="post" asp-action="DeleteThisIp" asp-route-id="@item.Id">
                        <button type="submit" class="btn btn-danger">Delete</button>
                    </form>
                </div>
            </div>
        }
    }

</div>