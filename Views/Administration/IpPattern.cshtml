@model IEnumerable<CustomIpPattern>
@{
    ViewBag.Title = "All IP Pattern";
}

<h2>All IP Pattern</h2>
<div>
    @foreach (var pattern in Model)
    {
        <div class="card">
            <div class="card-header">
                <div class="card-title">@pattern.Title</div>
            </div>
            <div class="card-body">
                <div>FirstIPPart : @pattern.FirstIpPart</div>
                <div>SeconIPdPart : @pattern.SeconIpdPart</div>
                <div>ThirdIPPart : @pattern.ThirdIpPart</div>
                <div>ForthIPPart : @pattern.ForthIpPart</div>
                <div>UserAgent : @pattern.UserAgent</div>
                <div>Method : @pattern.VerbsOrMethod</div>
            </div>
            <div class="card-footer">
                <div>
                    <form method="post">
                        <input type="hidden" name="Id" value="@(pattern.Id)" />
                        <input type="hidden" name="FirstIpPart" value="@(pattern.FirstIpPart)" />
                        <input type="hidden" name="SeconIpdPart" value="@(pattern.SeconIpdPart)" />
                        <input type="hidden" name="ThirdIpPart" value="@(pattern.ThirdIpPart)" />
                        <input type="hidden" name="ForthIpPart" value="@(pattern.ForthIpPart)" />
                        <input type="hidden" name="UserAgent" value="@(pattern.UserAgent)" />
                        <input type="hidden" name="Title" value="@(pattern.Title)" />
                        <input type="hidden" name="VerbsOrMethod" value="@(pattern.VerbsOrMethod)" />
                        <input type="hidden" name="Enabled" value="@(pattern.Enabled ? "true" : "false")" />
                        <label>Enable :  @(pattern.Enabled ? "true" : "false")</label>
                        <input type="submit" value="Change status" />
                    </form>
                </div>
                <div>
                    <form method="post" asp-action="DeleteIpPattern" asp-route-id="@(pattern.Id)">
                        <span style="display: none" id="confirmDeleteSpan_@(pattern.Id)">
                            <span>Are you sure want to delete ?</span>
                            <button type="submit" class="btn btn-danger">Yes</button>
                            <a href="#" onclick="confirmDelete('@(pattern.Id)',false)" class="btn btn-primary">No</a>
                        </span>
                        <span id="deleteSpan_@(pattern.Id)">
                            <a href="#" onclick="confirmDelete('@(pattern.Id)',true)" class="btn btn-danger">
                                Delete
                            </a>
                        </span>
                    </form>
                </div>

            </div>
        </div>
    }
</div>



@section Scripts {
    <script src="~/js/CustomScript.js"></script>
}